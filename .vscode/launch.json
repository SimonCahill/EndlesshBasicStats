    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (detailed reports)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/endlessh-report",
            "cwd": "${workspaceFolder}",
            "args": [
                "-d"
            ]
        },
        {
            "name": "Launch (no args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/endlessh-report",
            "cwd": "${workspaceFolder}"
        }
    ]
}